<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_car_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.returnlive.app.CarIdActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/name_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80"
        android:layout_gravity="center"
        android:background="@color/snow"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView android:id="@+id/img_backcarid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/license_plate_number"
                android:textSize="@dimen/px30"
                android:textColor="@color/write"
                android:layout_centerInParent="true"/>

            <TextView android:id="@+id/tv_caridsaves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px30"
                android:textSize="@dimen/px25"
                android:text="@string/saves"/>

        </com.zhy.autolayout.AutoRelativeLayout>

    </android.support.v7.widget.Toolbar>

    <EditText android:id="@+id/edt_printName"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_margin="@dimen/px10"
        android:background="@mipmap/editbg"
        android:layout_toEndOf="@+id/name_toolbar"
        android:hint="请输入车牌号"/>
</com.zhy.autolayout.AutoLinearLayout>
