<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#38000000" >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center">


            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="740px"
                android:layout_height="match_parent" >

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="700px"
                    android:layout_height="1000px"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="60px"
                    android:padding="50px"
                    android:gravity="center"
                    android:orientation="vertical" >


                    <TextView
                        android:id="@+id/tv_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="100px"
                        android:text="物流项目名称"
                        android:textColor="#029DAF"
                        android:textSize="56px"
                        android:drawablePadding="20px"
                        android:gravity="center" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60px"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/et_phone"
                            android:layout_width="match_parent"
                            android:layout_height="85px"
                            android:layout_marginTop="20px"
                            android:background="@color/blue"
                            android:gravity="left|center"
                            android:hint="请输入手机号码"
                            android:inputType="phone"
                            android:maxLength="11"
                            android:paddingLeft="20px"
                            android:textColor="@color/black"
                            android:textSize="32px" />

                        <EditText
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="85px"
                            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:layout_marginTop="10dp"
                            android:background="@color/blue"
                            android:gravity="left|center"
                            android:hint="@string/maximum_of_pwd_num"
                            android:minEms="6"
                            android:maxLength="30"
                            android:inputType="textPassword"
                            android:paddingLeft="20px"
                            android:textColor="@color/black"
                            android:textSize="32px" />

                        <EditText
                            android:id="@+id/et_password_again"
                            android:layout_width="match_parent"
                            android:layout_height="85px"
                            android:layout_marginTop="20px"
                            android:background="@color/blue"
                            android:gravity="left|center"
                            android:hint="请再次输入密码"
                            android:inputType="textPassword"
                            android:paddingLeft="20px"
                            android:textColor="@color/black"
                            android:textSize="32px" />

                        <com.zhy.autolayout.AutoRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40px" >

                            <Button
                                android:id="@+id/btn_code"
                                android:layout_width="wrap_content"
                                android:layout_height="90px"
                                android:text="获取验证码"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/white"
                                android:textSize="32px"
                                android:background="@drawable/shape_color_pwd2"
                                android:paddingLeft="20px"
                                android:paddingRight="20px" />

                            <EditText
                                android:id="@+id/et_code"
                                android:layout_width="match_parent"
                                android:layout_height="90px"
                                android:layout_alignParentLeft="true"
                                android:layout_toLeftOf="@+id/btn_code"
                                android:background="@drawable/blue_dep_cricle"
                                android:paddingLeft="20px"
                                android:paddingRight="20px"
                                android:layout_marginRight="10px"
                                android:hint="@string/please_input_verification_code"
                                android:textColor="@color/black"
                                android:textSize="32px" />

                        </com.zhy.autolayout.AutoRelativeLayout>

                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90px"
                        android:layout_marginTop="80px"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_dismiss"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_green_sel"
                            android:text="取消"
                            android:layout_marginRight="@dimen/px30"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textSize="32px" />

                        <Button
                            android:id="@+id/btn_reg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_green_sel"
                            android:text="注册"
                            android:layout_marginLeft="@dimen/px30"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textSize="32px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>

    <!--加载页面-->

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rel_register"
        android:layout_width="260px"
        android:layout_height="250px"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_loading"
        android:visibility="gone">


        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifView_forgetpass"
            android:layout_width="260px"
            android:layout_height="260px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-20px"
            android:scaleType="centerInside"
            android:src="@mipmap/loaging"></pl.droidsonroids.gif.GifImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20px"
            android:text="请稍后.."
            android:textColor="#fff"
            android:textSize="28px" />


    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoRelativeLayout>