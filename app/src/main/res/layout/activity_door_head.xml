<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_door_head"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.returnlive.app.DoorHeadActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/name_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80"
        android:layout_gravity="center"
        android:background="@color/snow"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView android:id="@+id/img_backdoor_headd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/door_head"
                android:textSize="@dimen/px30"
                android:textColor="@color/write"
                android:layout_centerInParent="true"/>

            <TextView android:id="@+id/tv_savesdoor_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px30"
                android:textSize="@dimen/px25"
                android:textColor="@color/white"
                android:text="@string/saves"/>

        </com.zhy.autolayout.AutoRelativeLayout>

    </android.support.v7.widget.Toolbar>

    <ImageView android:id="@+id/img_door_head"
        android:layout_width="600px"
        android:layout_height="400px"
        android:layout_gravity="center"
        android:layout_marginTop="60px"
        android:src="@mipmap/defaultpicture" />
</com.zhy.autolayout.AutoLinearLayout>
